<% if(recipe != null){ %>
    <h1>Recipe</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/categories/<%= recipe[0].category %>"><%= recipe[0].category %></a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= recipe[0].name %></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%= recipe[0].image %>" class="img-fluid sticky-top" loading="lazy">
        </div>
        <div class="col-12 col-md-4">
            <div class="row">
                <div class="col-12">
                    <h1><%= recipe[0].name %></h1>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi bi-tag"> <%= recipe[0].category %></i>
                </div>
                <div class="col-12" style="white-space: pre-line">
                    <h4>Cooking Instructions</h4>
                    <%= recipe[0].description %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe[0].ingredients.forEach(function(ingred, index){ %>
                            <li class="list-group-item"><%= ingred %></li>
                        <%})%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<%}%>